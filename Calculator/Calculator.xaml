<Page
    x:Class="Calculator.Calculator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="Button" x:Key="MyButtonStyle">
            <Setter Property="Background" Value="#FFEAE6E6" />
            <Setter Property="BorderBrush" Value="#FFA3EAF5" />
            <Setter Property="FontSize" Value="40" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Height" Value="100" />
            <Setter Property="Width" Value="150" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
        <Style TargetType="TextBox" x:Key="MyTextBoxStyle">
            <Setter Property="Height" Value="80" />
            <Setter Property="Width" Value="615" />
            <Setter Property="FontFamily" Value="Arial Black" />
            <Setter Property="FontSize" Value="55" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="TextAlignment" Value="Right" />
            <Setter Property="CornerRadius" Value="10" />
        </Style>
    </Page.Resources>

    <Grid>

        <TextBox x:Name="result"
                 Margin="246,107,0,0" 
                 Text="0" 
                 Style="{StaticResource MyTextBoxStyle}" />

        <Button x:Name="btnClear" Content="CE" 
                Background="#FFD8D6D6" 
                Margin="246,507,0,0" 
                Style="{StaticResource MyButtonStyle}"
                Click="btnClear_Click" />
        <Button x:Name="btnDivide" Content="÷" 
                Margin="711,192,0,0" 
                Style="{StaticResource MyButtonStyle}"
                Click="btnDivide_Click"/>
        <Button x:Name="btn7" Content="7" 
                Margin="246,192,0,0" 
                Style="{StaticResource MyButtonStyle}"
                Click="btn7_Click" />
        <Button x:Name="btn8" Content="8" 
                Margin="401,192,0,0"
                Style="{StaticResource MyButtonStyle}"
                Click="btn8_Click" />
        <Button x:Name="btn9" Content="9"
                Margin="556,192,0,0" 
                Style="{StaticResource MyButtonStyle}"
                Click="btn9_Click" />
        <Button x:Name="btnTimes" Content="X" 
                Margin="711,297,0,0" 
                Style="{StaticResource MyButtonStyle}"
                Click="btnTimes_Click" />
        <Button x:Name="btn4" Content="4" 
                Margin="246,297,0,0" 
                Style="{StaticResource MyButtonStyle}" 
                Click="btn4_Click" />
        <Button x:Name="btn5" Content="5" 
                Margin="401,297,0,0" 
                Style="{StaticResource MyButtonStyle}"
                Click="btn5_Click" />
        <Button x:Name="btn6" Content="6" 
                Margin="556,297,0,0" 
                Style="{StaticResource MyButtonStyle}"
                Click="btn6_Click" />
        <Button x:Name="btnMinus" Content="-" 
                Margin="711,402,0,0" 
                Style="{StaticResource MyButtonStyle}"
                Click="btnMinus_Click" />
        <Button x:Name="btn1" Content="1" 
                Margin="246,402,0,0" 
                Style="{StaticResource MyButtonStyle}"
                Click="btn1_Click" />
        <Button x:Name="btn2" Content="2" 
                Margin="401,400,0,0" 
                Style="{StaticResource MyButtonStyle}"
                Click="btn2_Click" />
        <Button x:Name="btn3" Content="3" 
                Margin="556,402,0,0" 
                Style="{StaticResource MyButtonStyle}"
                Click="btn3_Click" />
        <Button x:Name="btnPlus" Content="+" 
                Margin="711,507,0,0" 
                Style="{StaticResource MyButtonStyle}"
                Click="btnPlus_Click" />
        <Button x:Name="btn0" Content="0" 
                Margin="401,507,0,0" 
                Style="{StaticResource MyButtonStyle}"
                Click="btn0_Click" />
        <Button x:Name="btnEquals" Content="=" 
                Margin="556,507,0,0" 
                Style="{StaticResource MyButtonStyle}"
                Click="btnEquals_Click" />

    </Grid>
</Page>
