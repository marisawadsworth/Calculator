<Page
    x:Class="Calculator.Calculator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="Button" x:Key="MyButtonStyle">
            <Setter Property="Background" Value="#FFEAE6E6" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Height" Value="67" />
            <Setter Property="Width" Value="90" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
        <Style TargetType="TextBox" x:Key="MyTextBoxStyle">
            <Setter Property="Height" Value="60" />
            <Setter Property="Width" Value="378" />
            <Setter Property="FontFamily" Value="Arial Black" />
            <Setter Property="FontSize" Value="40" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="TextAlignment" Value="Right" />
            <Setter Property="CornerRadius" Value="10" />
        </Style>
    </Page.Resources>
    
    <Grid>

        <TextBox x:ConnectionId='2' x:Name="result"
                 Margin="246,118,0,0" 
                 Text="0" 
                 Style="{StaticResource MyTextBoxStyle}" />

        <Button x:ConnectionId='3' x:Name="btnClear" Content="CE" 
                Background="#FFD8D6D6" 
                Margin="246,398,0,0" 
                Style="{StaticResource MyButtonStyle}"
                                       />
        <Button x:ConnectionId='4' x:Name="btnDivide" Content="÷" 
                Margin="534,182,0,0" 
                Style="{StaticResource MyButtonStyle}"
                                        />
        <Button x:ConnectionId='5' x:Name="btn7" Content="7" 
                Margin="246,182,0,0" 
                Style="{StaticResource MyButtonStyle}"
                                   />
        <Button x:ConnectionId='6' x:Name="btn8" Content="8" 
                Margin="344,182,0,0"
                Style="{StaticResource MyButtonStyle}"
                                   />
        <Button x:ConnectionId='7' x:Name="btn9" Content="9"
                Margin="439,182,0,0" 
                Style="{StaticResource MyButtonStyle}"
                                   />
        <Button x:ConnectionId='8' x:Name="btnTimes" Content="X" 
                Margin="534,254,0,0" 
                Style="{StaticResource MyButtonStyle}"
                                       />
        <Button x:ConnectionId='9' x:Name="btn4" Content="4" 
                Margin="246,254,0,0" 
                Style="{StaticResource MyButtonStyle}" 
                                   />
        <Button x:ConnectionId='10' x:Name="btn5" Content="5" 
                Margin="344,254,0,0" 
                Style="{StaticResource MyButtonStyle}"
                                   />
        <Button x:ConnectionId='11' x:Name="btn6" Content="6" 
                Margin="439,254,0,0" 
                Style="{StaticResource MyButtonStyle}"
                                   />
        <Button x:ConnectionId='12' x:Name="btnMinus" Content="-" 
                Margin="534,326,0,0" 
                Style="{StaticResource MyButtonStyle}"
                                       />
        <Button x:ConnectionId='13' x:Name="btn1" Content="1" 
                Margin="246,326,0,0" 
                Style="{StaticResource MyButtonStyle}"
                                   />
        <Button x:ConnectionId='14' x:Name="btn2" Content="2" 
                Margin="344,326,0,0" 
                Style="{StaticResource MyButtonStyle}"
                                   />
        <Button x:ConnectionId='15' x:Name="btn3" Content="3" 
                Margin="439,326,0,0" 
                Style="{StaticResource MyButtonStyle}"
                                   />
        <Button x:ConnectionId='16' x:Name="btnPlus" Content="+" 
                Margin="534,398,0,0" 
                Style="{StaticResource MyButtonStyle}"
                                      />
        <Button x:ConnectionId='17' x:Name="btn0" Content="0" 
                Margin="344,397,0,0" 
                Style="{StaticResource MyButtonStyle}"
                                   />
        <Button x:ConnectionId='18' x:Name="btnEquals" Content="=" 
                Margin="439,397,0,0" 
                Style="{StaticResource MyButtonStyle}"
                                        />
   
    </Grid>
</Page>

