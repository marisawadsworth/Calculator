<Page
    x:Class="Calculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <RelativePanel>
            <Button x:ConnectionId='22' Name="HamburgerButton" 
                    FontFamily="Segoe MDL2 Assets" 
                    Content="&#xE700;" FontSize="36" 
                                                  />
            <TextBox Text="Calculator" FontSize="24" 
                     Width="195" Margin="60,0,0,0"  
                     Height="50" FontWeight="Bold" 
                     BorderBrush="#66FFFFFF"/>
        </RelativePanel>
        <SplitView x:ConnectionId='2' Name="MySplitView" Grid.Row="1" 
                   DisplayMode="CompactOverlay" 
                   OpenPaneLength="200" 
                   CompactPaneLength="56" 
                   HorizontalAlignment="Left">
            <SplitView.Pane>
                <ListBox x:ConnectionId='18' SelectionMode="Single" Name="IconsListBox"
                     >
                    <ListBoxItem x:ConnectionId='19' Name="HeartListboxItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE00B;" FontSize="36" />
                            <TextBlock Text="Heart" FontSize="24" Margin="20,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:ConnectionId='20' Name="StarListboxItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE0B4;" FontSize="36" />
                            <TextBlock Text="Star" FontSize="24" Margin="20,0,0,0" />
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>

            <SplitView.Content>
                <TextBlock x:ConnectionId='21' Name ="ResultTextBlock" />
            </SplitView.Content>
        </SplitView>

        <TextBox x:ConnectionId='3' x:Name="TextDisplay" HorizontalAlignment="Left" Height="59" Margin="250,107,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="375" FontSize="40" TextAlignment="Right" Grid.Row="1"                                      />

        <Button Content="CE" 
                VerticalAlignment="Top" Width="90" 
                Height="67" FontSize="20"
                Background="#FFEAE6E6" Margin="250,171,0,0" Grid.Row="1"/>
        <Button Content="⌫" 
                Margin="348,171,0,0" VerticalAlignment="Top" 
                Width="90" Height="67" FontSize="20" 
                Background="#FFEAE6E6" Grid.Row="1"/>
        <Button Content="%" VerticalAlignment="Top" 
                Width="90" Height="67" FontSize="20" 
                Background="#FFEAE6E6" Margin="443,171,0,0" 
                Grid.Row="1"/>
        <Button x:ConnectionId='4' Content="÷" 
                Margin="538,171,0,0" VerticalAlignment="Top" 
                Width="90" Height="67" FontSize="26" 
                Background="#FFEAE6E6" Grid.Row="1"                      />
        <Button x:ConnectionId='5' Content="7" Margin="250,243,0,0" 
                VerticalAlignment="Top" Width="90" 
                Height="67" FontSize="20" 
                Background="#FFEAE6E6" Grid.Row="1"                    />
        <Button x:ConnectionId='6' Content="8" 
                Margin="348,243,0,0" VerticalAlignment="Top" 
                Width="90" Height="67" FontSize="20" 
                Background="#FFEAE6E6" Grid.Row="1"                    />
        <Button x:ConnectionId='7' Content="9" Margin="443,243,0,0" 
                VerticalAlignment="Top" Width="90" 
                Height="67" FontSize="20" 
                Background="#FFEAE6E6" Grid.Row="1"                    />
        <Button x:ConnectionId='8' Content="X" Margin="538,243,0,0" 
                VerticalAlignment="Top" Width="90" 
                Height="67" FontSize="20" 
                Background="#FFEAE6E6" Grid.Row="1"                      />
        <Button x:ConnectionId='9' Content="4" Margin="250,315,0,0" 
                VerticalAlignment="Top" Width="90" 
                Height="67" FontSize="20" 
                Background="#FFEAE6E6" Grid.Row="1"                    />
        <Button x:ConnectionId='10' Content="5" Margin="348,315,0,0" 
                VerticalAlignment="Top" Width="90" 
                Height="67" FontSize="20" 
                Background="#FFEAE6E6" Grid.Row="1"                    />
        <Button x:ConnectionId='11' Content="6" Margin="443,315,0,0" 
                VerticalAlignment="Top" Width="90"
                Height="67" FontSize="20" 
                Background="#FFEAE6E6" Grid.Row="1"                    />
        <Button x:ConnectionId='12' Content="-" Margin="538,315,0,0" 
                VerticalAlignment="Top" Width="90" 
                Height="67" FontSize="20" 
                Background="#FFEAE6E6" Grid.Row="1"                      />
        <Button x:ConnectionId='13' Content="1" Margin="250,387,0,0" 
                VerticalAlignment="Top" Width="90" 
                Height="67" FontSize="20" 
                Background="#FFEAE6E6" Grid.Row="1"                    />
        <Button x:ConnectionId='14' Content="2" Margin="348,387,0,0" 
                VerticalAlignment="Top" Width="90" 
                Height="67" FontSize="20" 
                Background="#FFEAE6E6" Grid.Row="1"                    />
        <Button x:ConnectionId='15' Content="3" Margin="443,387,0,0" 
                VerticalAlignment="Top" Width="90" 
                Height="67" FontSize="20" 
                Background="#FFEAE6E6" Grid.Row="1"                    />
        <Button x:ConnectionId='16' Content="+" Margin="538,387,0,0" 
                VerticalAlignment="Top" Width="90" 
                Height="67" FontSize="20" 
                Background="#FFEAE6E6" Grid.Row="1"                      />
        <Button x:ConnectionId='17' Content="0" Margin="250,459,0,0" 
                VerticalAlignment="Top" Width="185" 
                Height="67" FontSize="20" 
                Background="#FFEAE6E6" Grid.Row="1"                    />
        <Button Content="." Margin="443,459,0,0" 
                VerticalAlignment="Top" Width="90" 
                Height="67" FontSize="20" 
                Background="#FFEAE6E6" Grid.Row="1"/>
        <Button Content="=" Margin="538,459,0,0" 
                VerticalAlignment="Top" Width="90" 
                Height="67" FontSize="20" 
                Background="#FFEAE6E6" Grid.Row="1"/>

        <RichTextBlock HorizontalAlignment="Left" Height="353" Margin="648,171,0,0" Grid.Row="1" VerticalAlignment="Top" Width="197">
            <Paragraph>
                <Run Text="RichTextBlock"/>
            </Paragraph>
        </RichTextBlock>

        <TextBlock Text="History" HorizontalAlignment="Left" 
                   Margin="648,35,0,0" VerticalAlignment="Top" 
                   Height="44" Width="227" FontSize="24"
                   FontWeight="Bold" Grid.Row="1"/>
        <TextBlock Text="There's no history" 
                   HorizontalAlignment="Left" 
                   Margin="648,111,0,0" VerticalAlignment="Top" 
                   Height="44" Width="227" FontSize="24" 
                   FontWeight="Bold" Grid.Row="1"/>



    </Grid>
</Page>

